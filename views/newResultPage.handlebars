<div class="container d-flex flex-column align-items-center justify-content-center">
  <h3>連結已產生</h3>
  <a class="mt-3 shortUrl" target="_blank" href="{{url}}">{{shortUrlLink}}</a>
  <button class="btn btn-outline-warning rounded-pill mt-4" onclick="copyLink()">COPY</button>
</div>
<script>
  function copyLink() {
    const link = document.querySelector('.shortUrl')
    document.getSelection().selectAllChildren(link)
    document.execCommand("copy")
    window.getSelection().removeAllRanges()
  }
</script>